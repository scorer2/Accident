<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title Here"
        android:id="@+id/single_txt_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Driver: "
        android:id="@+id/single_txt_driver"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/single_txt_title"
        android:layout_toRightOf="@+id/single_txt_towing"
        android:layout_toEndOf="@+id/single_txt_towing" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date created: "
        android:id="@+id/single_txt_date"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/single_txt_driver"
        android:layout_alignLeft="@+id/single_txt_driver"
        android:layout_alignStart="@+id/single_txt_driver" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/single_txt_time"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/single_txt_date"
        android:layout_alignLeft="@+id/single_txt_date"
        android:layout_alignStart="@+id/single_txt_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location: "
        android:id="@+id/single_txt_location"
        android:layout_below="@+id/single_txt_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:lines="2"
        android:maxLines="2"
        android:autoLink="web"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Towing Service:"
        android:id="@+id/single_txt_towing"
        android:layout_below="@+id/single_txt_location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/single_imgView"
        android:maxWidth="200dp"
        android:minHeight="115dp"
        android:src="@drawable/rc_report"
        android:maxHeight="200dp"
        android:minWidth="115dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/single_txt_driver"
        android:layout_toRightOf="@+id/single_txt_driver"
        android:layout_alignTop="@+id/single_txt_towing1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/txtDescription"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/single_txt_towing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Actual Description here"
        android:id="@+id/single_txt_Description"
        android:layout_below="@+id/txtDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/single_imgView"
        android:lines="6"
        android:layout_alignRight="@+id/single_txt_towing1"
        android:layout_alignEnd="@+id/single_txt_towing1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Driver: "
        android:id="@+id/textView"
        android:layout_above="@+id/single_txt_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Created on:"
        android:id="@+id/textView2"
        android:layout_above="@+id/single_txt_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Happened:"
        android:id="@+id/textView3"
        android:layout_above="@+id/single_txt_location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="false"
        android:id="@+id/single_txt_towing1"
        android:layout_alignTop="@+id/single_txt_towing"
        android:layout_toRightOf="@+id/single_txt_towing"
        android:layout_toEndOf="@+id/single_txt_towing" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User:"
        android:id="@+id/txt_user"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_single_user"
        android:layout_below="@+id/txt_user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>